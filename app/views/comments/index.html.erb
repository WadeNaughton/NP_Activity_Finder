



<div class="container">
<%= link_to "Back","/users/#{current_user.id}" %>
    <div class="col">
        <% @comments.each do |comment| %>
            <div class="image-format"><img src="https://user-images.githubusercontent.com/88012780/249285064-2a7decf0-0c9c-40c9-8f0e-1a191b5eee36.jpg", width="80" height="80"></div>
        <div class="park-comments">
            <div class="name-height">
                <p style="color: #0000FF"> <%= comment[1] %></p>
                <p style="font-size: 12px;"> <%= comment.created_at.strftime("%B %d") %> </p>
                <p> <%= comment.body %></p>
                <p>Event Name: <%= comment.user_new_event.new_event.name%></p>
                
                <div class="row">
            <div class="col-lg-2">
                <%=button_to "Update", "/users/#{@user.id}/parks/#{@event.new_park.id}/events/#{@event.new_event.id}/user_new_events/#{@event.id}/comments/#{comment.id}/edit", method: :get, class: "btn btn-primary"  %>
            </div>
            <div class="col-lg-2">
                <%=button_to "Delete", "/users/#{@user.id}/parks/#{@event.new_park.id}/events/#{@event.new_event.id}/user_new_events/#{@event.id}/comments/#{comment.id}", method: :delete, class: "btn btn-primary"   %>
            </div>
        </div>
            </div>
        </div>
        <% end %>
    </div>
