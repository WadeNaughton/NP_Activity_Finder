<% @parks.each do |park| %>
    <p><h2><%=park.name%></h2></p>
    <p><%=park.description%></p>
   <p><%=park.park_code%></p>
   <p> <%=park.latitude%></p>
   <p> <%=park.longitude%></p>
   <p> <%=park.phone_number%></p>
   <p> <%=park.email%></p>
   <p> <%=park.directions_website%></p>
   <p> <%=park.closed_day%></p>
   <p> <%=park.address%></p>
    <%park.entrance_fees.each do |p_fees|%>
       <p> <%=p_fees[:cost]%></p>
       <p> <%=p_fees[:description]%></p>
    <%end%>
        <h3> Operating Hours </h3>
    <p>Monday: <%=park.operating_hours[:monday]%></p>
   <p>Tuesday: <%=park.operating_hours[:tuesday]%></p>
   <p>Wednesday: <%=park.operating_hours[:wednesday]%></p>
   <p>Thursday: <%=park.operating_hours[:thursday]%></p>
   <p>Friday: <%=park.operating_hours[:friday]%></p>
   <p>Saturday: <%=park.operating_hours[:saturday]%></p>
   <p>Sunday: <%=park.operating_hours[:sunday]%></p>
    <%park.photos.each do |photo|%>
        <img src="<%=photo[:url]%>" alt="<%=photo[:altText]%>" style="width:100px;height:110px;">
    <%end%>
<%end%>

