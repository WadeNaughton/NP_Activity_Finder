<h1><%=@user.first_name%>'s Profile</h1>
<%=@user.last_name%>
<%=@user.username%>
<%=@user.state%>
<h3> Favorite Parks </h3>
<%@user_new_parks.each do |park|%>
    <p>Name: <%=link_to "#{park.name}", "/users/#{@user.id}/parks/#{park.id}"%></p>
    <p>Description: <%=park.description%></p>
<%end%>

<h3> Favorite Events </h3>
<% @all_user_data.each do |event| %>

    <p>Name: <%= sanitize event.new_event.name %> </p>
    <p>Description: <%= sanitize event.new_event.description %></p>
    <p><%=link_to 'Find more events at this park', user_park_path(current_user.id, event.new_park.id) %></p>
<% end%>