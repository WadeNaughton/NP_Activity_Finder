<div class="container text-center">
    <div class="header">
        <h1><%=@event.name%></h1>
    </div>

    <div class="row">
       
        <div class="col-lg-4">
            <div class="event-info">
                <div class="header">
                        <p><h3>Location </h3></p>
                </div>
                <p><%= @event.location %></p>

                <div class="row">
                    <div class="col-lg-12"> 
                        <p><%= link_to "View Directions", "https://www.google.com/maps/dir/?api=1&destination=#{@event.latitude},#{@event.longitude}" %> </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="event-info">
                <div class="header">
                    <p><h3>Fee </h3></p>
                </div>
                <p><%= @event.fee_info %></p>
            </div>
        </div>


        <div class="col-lg-4">
            <div class="event-info">
                <div class="header">
                    <p><h3>Event Type </h3></p>
                </div>
                <div class="row">
                    <% @event.type_of_event.each do |t| %>
                        <div class="col-lg-12">
                        
                            <p><%= t %></p>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>         
    </div>

    <div class="row">
        <div class="col">
            <div class="event-info">
                <div class="header">
                    <h3> Available Dates And Time </h3>
                </div>
                <div class="row">
                <% @event.date.each do |date| %>
                
                    <div class="col-lg-4">
                        <p> <%= date.to_datetime.strftime("%m/%d/%Y") %></p>
                    </div>
                
                    <% end %>
                </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <p><b>This Event Will Start At: </b><%= @event.time[0] %> <b>And End At: </b><%= @event.time[1] %></p>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>

        <% if current_user %>
            <%=button_to "Add to Profile", "/users/#{@user.id}/parks/#{@park.id}/events/#{@event.event_code}/user_new_events", method: :post, :park_id => params[:park_id], class: "btn btn-primary"%>
        <%end%>
</div>